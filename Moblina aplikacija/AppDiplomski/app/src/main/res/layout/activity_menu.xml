<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cornetmijo.appdiplomski.MenuActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_gravity="center"
        >

        <FrameLayout
            android:layout_width="368dp"
            android:layout_height="495dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_gravity="center"
            >

            <ImageButton
                android:id="@+id/btnDiagnose"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="175dp"
                android:background="@color/colorWhite"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/diagnose"
                />

            <ImageButton
                android:id="@+id/btnDoctor"
                android:layout_width="100dp"
                android:layout_height="102dp"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="175dp"
                android:background="@color/colorWhite"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/doctor"

                />

            <ImageButton
                android:id="@+id/btnPrescription"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="290dp"
                android:background="@color/colorWhite"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/prescription" />

            <ImageButton
                android:id="@+id/btnReferral"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="290dp"
                android:background="@color/colorWhite"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/referral" />

            <ImageButton
                android:id="@+id/btnVisitDoctor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="290dp"
                android:background="@color/colorWhite"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/visitdoctor" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="400dp"
                android:background="@color/colorWhite"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/calendar"
                android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/imageButton8"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="400dp"
                android:background="@color/colorWhite"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/calendar"
                android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="400dp"
                android:background="@color/colorWhite"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/calendar"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="169dp"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/menu" />

            <ImageButton
                android:id="@+id/btnTerm"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="175dp"
                android:background="@color/colorWhite"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/rezervacija" />

        </FrameLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
